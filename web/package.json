{
  "name": "web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.ts --fix",
    "lint:report": "eslint . --ext .vue,.js,.ts --format json --output-file eslint-report.json",
    "format": "prettier --write \"src/**/*.{js,ts,vue,css,md}\"",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:smoke": "node tests/e2e/smoke-test.mjs"
  },
  "dependencies": {
    "@headlessui/vue": "^1.7.23",
    "@tailwindcss/vite": "^4.1.13",
    "axios": "^1.12.2",
    "echarts": "^5.6.0",
    "pinia": "^3.0.3",
    "qrcode.vue": "^3.6.0",
    "uuid": "^13.0.0",
    "vue": "^3.5.22",
    "vue-echarts": "^7.0.3",
    "vue-i18n": "^11.1.12",
    "vue-qrcode-reader": "^5.7.3",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^9.27.0",
    "happy-dom": "^18.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.8"
  }
}
